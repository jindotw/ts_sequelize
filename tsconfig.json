{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dst",
    "moduleResolution": "Node",
    "strict": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
  ]
}
